{
  "compileOnSave": true,
  "compilerOptions": {
    "alwaysStrict": true,
    "target": "es2017",
    "module": "none",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "strictNullChecks": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "noEmitOnError": true,
    "sourceMap": false,
    "outDir": "pkg",
    "removeComments": true,
    "stripInternal": true,
    "lib": [
      "es2017",
      "dom"
    ]
  }
}
